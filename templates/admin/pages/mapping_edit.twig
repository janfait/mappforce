
<!-- Modal -->
<div id="edit" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit existing mapping</h4>
      </div>
      <div class="modal-body">
		<form id="mapping_edit" role="form" method="POST" action="{{base_url}}/mapping">
			<div class="form-group">
				<label for="cep">CEP Attribute</label>
				<input type="text" class="form-control" id="cep" name="cep" placeholder="" value="">
			</div>
			<div class="form-group">
				<label for="cep_value">CEP Value</label>
				<select class="form-control" id="cep_value" name="cep_value"></select>
			</div>
			<div class="form-group">
				<label for="sfdc">Map to SFDC field</label>
				<select name="sfdc" class="form-control" id="sfdc" name="sfdc">
					<option value="a">A</option>
					<option value="b">B</option>
					<option value="c">C</option>
				</select>
			</div>
			<div class="form-group">
				<label for="sfdc_value">Map to SFDC value</label>
				<input type="text" name="sfdc_value" class="form-control" id="sfdc_value" name="sfdc_value">
			</div>
			<button type="submit" class="btn btn-info">Submit</button>
		</form>
      </div>
    </div>

  </div>
</div>


